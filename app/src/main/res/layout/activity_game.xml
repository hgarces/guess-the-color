<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.henriquegarces.guessthecolor.GameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
        android:id="@+id/rgb_color_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/text_color_dark"
        android:textSize="36sp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_weight="3" />

        <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">

        <com.henriquegarces.guessthecolor.util.CircleButton
            android:id="@+id/circle_button1"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <com.henriquegarces.guessthecolor.util.CircleButton
            android:id="@+id/circle_button2"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <com.henriquegarces.guessthecolor.util.CircleButton
            android:id="@+id/circle_button3"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

        <TextView
        android:id="@+id/final_score_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="@color/text_color_dark"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_weight="2" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/root_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible">
    </FrameLayout>


</RelativeLayout>